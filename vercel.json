{
  "version": 2,
  "name": "wa-blast",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "SESSION_NAME": "wa-blast-session",
    "UPLOAD_PATH": "./uploads",
    "MAX_FILE_SIZE": "50MB"
  },
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  }
}
